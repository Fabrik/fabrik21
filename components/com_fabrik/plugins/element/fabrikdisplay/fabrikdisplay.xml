<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>Display Text</name>
	<author>Hugh Messenger</author>
	<creationDate>March 2009</creationDate>
	<copyright>(C) 2005-2009 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Renders Display Text</description>
	<files>
		<filename fabrikplugin="fabrikdisplay">fabrikdisplay.php</filename>
		<filename>index.html</filename>
	</files>
	<params addpath="/administrator/components/com_fabrik/elements">
		<param name="eval" type="eval" default="0" label="Eval" />
		<param name="default" type="default" default="" label="Default" />
	</params>
	<params group="extra">
		<param name="display_showlabel" type="radio" default="1" label="Show Label" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
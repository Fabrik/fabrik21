	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Test to ensure the data entered is alphanumeric</description>
	<files>
		<filename fabrikplugin="isalphanumeric">isalphanumeric.php</filename>
		<filename>index.html</filename>

<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="validationrule" method="upgrade">
	<name>Is numeric</name>
	<author>Hugh Messenger</author>
	<creationDate>Nov 2008</creationDate>
	<copyright>(C) 2005-2008 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>hugh.messenger@gmail.com</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Test to ensure the data entered is numeric</description>
	<files>
		<filename fabrikplugin="isnumeric">isnumeric.php</filename>
		<filename>index.html</filename>
	</files>
	<params repeat="1" repeatcontrols="0">
		<param type="text" name="isnumeric-message" size="30" label="Error message" value="" description="VALIDATIONERRORDESC" />
		<param type="textarea" cols="30" rows="5" name="isnumeric-validation_condition" label="Condition" description="VALIDATIONCONDITIONDESC"/>
		<param name="isnumeric-allow_empty" type="radio" default="0" label="VALIDATIONALLOWEMPTY" description="VALIDATIONALLOWEMPTYDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
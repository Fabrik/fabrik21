<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="validationrule" method="upgrade">
	<name>Akismet</name>
	<author>Rob Clayburn</author>
	<creationDate>Nov 2008</creationDate>
	<copyright>(C) 2005-2008 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Validate content with the Akismet web service</description>
	<files>
		<filename fabrikplugin="akismet">akismet.php</filename>
		<filename>index.html</filename>
		<filename>akismet.class.php</filename>
	</files>
	<params repeat="1" repeatcontrols="0">
		<param type="text" name="akismet-message" size="30" label="Error message" value="" description="VALIDATIONERRORDESC" />
		<param type="textarea" cols="30" rows="5" name="akismet-validation_condition" label="Condition" description="VALIDATIONCONDITIONDESC"/>
		<param type="text" name="akismet-key" size="30" label="AKISMET KEY" value="" description="AKISMET KEY DESC" />
	</params>
</install>
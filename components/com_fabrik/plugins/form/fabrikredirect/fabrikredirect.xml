<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="form" method="upgrade">
	<name>Redirect</name>
	<author>Rob Clayburn</author>
	<creationDate>March 2007</creationDate>
	<copyright>(C) 2005-2007 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Performs redirect once form has been submitted</description>
	<files>
		<filename fabrikplugin="fabrikRedirect">fabrikRedirect.php</filename>
		<filename>index.html</filename>
	</files>
	<params repeat="1" repeatcontrols="0">
		<param name="jump_page" type="text" size="105" default="" label="JUMPPAGE" description="JUMPPAGEDESC"/>
			<param name="append_jump_url" type="radio" default="0" label="APPENDJUMPURL" description="APPENDJUMPURLDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="thanks_message" type="textarea" default="" rows="8" cols="60" label="REDIRECTTHANKSMSG" description="REDIRECTTHANKSMSGDESC" />
		<param name="save_insession" type="radio" default="0" label="SAVEINSESSION" description="SAVEINSESSIONDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="redirect_conditon" type="textarea" cols="60" rows="5" label="CONDITION" description="CONDITIONDESC" />
		
		<param name="redirect_inajax" 
			type="radio" 
			default="0" 
			label="PLG_FORM_REDIRECT_IN_AJAX_LABEL" 
			description="PLG_FORM_REDIRECT_IN_AJAX_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>